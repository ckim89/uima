<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.group9.choresplitter" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ParseApplication"
        android:allowBackup="true"
        android:icon="@drawable/cleaning_tools"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".GroupsListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".MemberDetail"
            android:label="@string/title_activity_member_detail" >
        </activity>
        <activity
            android:name=".Credits"
            android:label="@string/credits" >
        </activity>
        <activity
            android:name=".SignIn"
            android:label="@string/title_activity_sign_in" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GroupList"
            android:label="@string/title_activity_group_list" >
        </activity>
        <activity
            android:name=".Addmember"
            android:label="@string/title_activity_addmember" >
        </activity>
    </application>

</manifest>
