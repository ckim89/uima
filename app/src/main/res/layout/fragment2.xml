<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unclaimed Chores"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/unclaimed_chores_list_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending Chores"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/pending_chores_list_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Completed Chores"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/completed_chores_list_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal">
    </ListView>

</LinearLayout>